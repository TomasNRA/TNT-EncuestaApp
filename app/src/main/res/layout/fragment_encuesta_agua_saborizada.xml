<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EncuestaAguaSaborizadaFragment"
    android:background="@color/backgroundApp">
    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/actionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Agua saborizada"
            android:textSize="30dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/cardColor"/>

    </FrameLayout>
    <ScrollView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/textViewPorcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingStart="10dp"
                android:text="TamaÃ±o de la porcion:"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPorcion"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardColor"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp">

                <RadioGroup
                    android:id="@+id/rgPorcion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="9dp">

                    <RadioButton
                        android:id="@+id/rbPorcionOpcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100ml"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbPorcionOpcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200ml"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbPorcionOpcion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300ml"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbPorcionOpcion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400ml"
                        android:textSize="25sp"/>
                </RadioGroup>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewCantidad"
                android:paddingStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad:"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewCantidad"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardColor"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCantidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="30sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/rsCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:valueFrom="0"
                        android:valueTo="100"
                        app:tickColor="@color/black"
                        app:thumbColor="@color/black"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textViewFrecuencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Frecuencia:"
                android:textSize="35sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewFrecuencia"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardColor"
                app:cardElevation="10dp"
                app:cardCornerRadius="25dp">

                <RadioGroup
                    android:id="@+id/rgFrecuencia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="9dp">

                    <RadioButton
                        android:id="@+id/rbFrecuenciaOpcion1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diaria"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbFrecuenciaOpcion2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semanal"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbFrecuenciaOpcion3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mensual"
                        android:textSize="25sp"/>

                    <RadioButton
                        android:id="@+id/rbFrecuenciaOpcion4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anual"
                        android:textSize="25sp"/>
                </RadioGroup>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnCancelar"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cancelar"/>
            <Button
                android:id="@+id/btnContinuar"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="siguiente"
                android:backgroundTint="@color/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>